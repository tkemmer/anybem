struct Charge {
	pos: Position,
	val: Real
}

struct Triangle {
	v1:     &Position,   // first node
	v2:     &Position,   // second node
	v3:     &Position,   // third node
	center: Position,    // centroid
	normal: Position,    // unit normal vector
	area:   Real,        // surface area
	dist:   Real         // distance to origin
}

type SurfaceElement = Triangle;

struct SurfaceModel {
	nodes:    &[Position],
	elements: &[SurfaceElement],
	charges:  &[Charge],
	params:   SystemParams
}
